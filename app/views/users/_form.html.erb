<%= form_with model: User.new, url: '/login' do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: "form-control", required: true%>
  </div>
  <div class="form-group">
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, class: "form-control", required: true %>
  </div>
  <%= f.submit 'login' %>
<% end %>