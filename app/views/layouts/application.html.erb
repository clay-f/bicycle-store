<!DOCTYPE html>
<html>
  <head>
    <title>DancheW</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Navbar', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class='nav-item'> <%= link_to '分类','#',  class: 'nav-link'%></li>
          <li class='nav-item'><%= link_to '单车', '#', class: 'nav-link'%></li>
          <li class='nav-item'> <%= link_to '婴儿车', '#',  class: 'nav-link'%></li>
          <li class='nav-item'> <%= link_to '活动单车', '#', class: 'nav-link'%></li>
          <% if user_login? %>
            <li>
              <%= link_to 'Logout', logout_path, class: "nav-link" %>
            <% else %>
              <%= link_to 'Login', login_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
    <% if notice %>
      <p class="alert alert-danger"><%= notice %></p>
    <% end %>
    <%= yield %>
  </body>
</html>