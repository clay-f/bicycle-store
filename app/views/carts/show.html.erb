<h2>购物车清单</h2>
<section>
  <ul>
    <% @cart.line_items.each do |item| %>
      <li><%= item.quantity %>&times;<%= item.product.name %> <%= number_to_currency(item.total_price) %></li>
    <% end %>
    <p><%= number_to_currency(@cart.total_price) %></p>
    <%= button_to '清空购物车', @cart, method: :delete %>
  </ul>
</section>

<section>
    <p><%= link_to '继续购物', root_path %></p>
    <p><%= link_to '结算' %></p>
</section>