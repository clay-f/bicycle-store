  <div class="row">
    <div class="col">
      <div class="product_img">
        <%= image_tag @product.avatar, class: "img-fuild rounded" %>
      </div>
    </div>
    <div class="col">
      <div class="product_info">
        <h3> <%= @product.name %> </h3>
        <p><%= time_ago_in_words(@product.created_at) %></p>
        <p>详细信息: <%= @product.info %></p>
        <p>价格: <%= number_to_currency(@product.price) %></p>
      </div>
    </div>
  </div>
  <br>
  <article class="text-center">
    <% if @product.desc_images.present? %>
      <% @product.desc_images.each do |img| %>
        <%= image_tag img.url, class: "img-fuild rounded", size: '' %>
        <br>
        <br>
      <% end %>
    <% end %>
  </article>
</main>
<br>
<section class="text-center">
  <% if user_login? %>
    <%= link_to '编辑', edit_product_path(@product) %> |
    <%= link_to '返回', products_path %>
  <% end %>
  <%= button_to '添加到购物车', line_items_path(product_id: @product), class: 'btn btn-primary'  %>
</section>