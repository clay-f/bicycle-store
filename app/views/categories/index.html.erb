<section>
  <div class="row justify-content-md-center">
    <figure class="figure">
      <%= image_tag @category_img, class: "figure-img img-fluid rounded" %>
    </figure>
  </div>
  <div class="row justify-content-md-center">
    <% @categories.each do |category| %>
      <div class="col-1">
        <% if category.id == params[:category_id].to_i %>
            <%= link_to category.name, categories_path(category_id: category.id), id: "categories_prompt_messages" %>
        <% else %>
            <%= link_to category.name, categories_path(category_id: category.id) %>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
  <br>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card" id="category_product">
          <%= link_to image_tag(product.avatar, class: "card-img-top"), product_path(product) %>
          <div class="card-body text-center">
            <h5 class="card-title"> <%= link_to product.name, product_path(product) %> </h5>
            <p class="text-muted"> <%= product.info %> </p>
            <p> <%= number_to_currency(product.price) %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
<br>
</section>