<section>
	<div id="carouse-products" class="carousel slide" data-ride="carousel">
	  <ol class="carousel-indicators">
	    <% @carousel_products.each do |product| %>
	      <% if @carousel_products.first.id == product.id %>
	        <li data-target="#carouse-products" data-slide-to="<%= product.id %>" class="active"></li>
	      <% else %>
	        <li data-target="#carouse-products" data-slide-to="<%= product.id %>"></li>
	      <% end %>
	    <% end %>
	  </ol>
	  <div class="carousel-inner">
	    <% @carousel_products.each do |product| %>
	      <% if @carousel_products.first.id == product.id %>
	          <div class="carousel-item active">
	        <% else %>
	          <div class="carousel-item">
	        <% end %>
	        <% unless product.avatar.nil? %>
		    	<%= image_tag product.avatar, class: "d-block w-100", size: "500" %>        	
	        <% end %>
	        	<div class="carousel-caption d-none d-md-block">
	        		<h5><%= product.name %></h5>
	        	</div>
	        </div>
	      <% end %>
	    </div>
	    <a href="#carouse-products" class="carousel-control-prev" role="button" data-slide="prev">
	    	<span class="carousel-control-prev-icon" aria-hidden="true"></span>
	    	<span class="sr-only">Previous</span>
	    </a>
	    <a class="carousel-control-next" href="#carouse-products" role="button" data-slide="next">
	    	<span class="carousel-control-next-icon" aria-hidden="true"></span>
	   		<span class="sr-only">Next</span>
	    </a>
  </div>
  <br>
</section>

